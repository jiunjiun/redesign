.row#project
  .col-md-12.header
    .page-header
      %h2
        = link_to @current_page_user.username, home_path(@current_page_user.username)
        = " / #{@project.name}"
        %small
          \-
          = link_to @project.url, @project.url

  .col-md-12.css_link
    .input-group
      %span.input-group-addon CSS
      %input.form-control#css_link{placeholder: "CSS", type: "text", value: "#{root_url}#{@current_page_user.username}/#{@project.name}.css"}
  .row
    .col-md-12
      - if current_manage_user?
        .col-md-10
          %h4 Complete CSS
          %pre
            = @project.stylesheet
        .col-md-2
          = render partial: 'option'
      - else
        .col-md-12
          %h4 Complete CSS
          %pre
            = @project.stylesheet